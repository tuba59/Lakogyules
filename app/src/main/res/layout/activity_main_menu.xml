<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:fbutton="http://schemas.android.com/apk/res-auto"
        android:id="@+id/LinearLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:weightSum="10"
        tools:context="com.example.substances.MainMenuActivity">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="none"
            android:fontFamily="sans-serif-thin"
            android:text="Lakógyűlés++"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="40sp"
            android:textStyle="bold|italic"
            android:typeface="normal" />

        <!--<ImageView-->
        <!--android:id="@+id/imageView1"-->
        <!--android:layout_width="289dp"-->
        <!--android:layout_height="0dp"-->
        <!--android:layout_weight="9.5"-->
        <!--android:contentDescription="logo"-->
        <!--android:cropToPadding="false"-->
        <!--android:src="" />-->

        <Button
            android:id="@+id/button_users"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:minHeight="48dp"
            android:minWidth="88dp"
            android:text="Szavazók megadása" />

        <Button
            android:id="@+id/button_start"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:minHeight="48dp"
            android:minWidth="88dp"
            android:text="Szavazás indítás" />

        <Button
            android:id="@+id/button_carts"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:minHeight="48dp"
            android:minWidth="88dp"
            android:text="Szavazólapok elkészítése" />

        <Button
            android:id="@+id/button_about"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:minHeight="48dp"
            android:minWidth="88dp"
            android:text="Készítők" />

        <TextView
            android:id="@+id/textViewDebug"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="none"
            android:fontFamily="sans-serif-thin"
            android:text="debug info"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="20sp"
            android:textStyle="bold|italic"
            android:typeface="normal" />

    </LinearLayout>
</ScrollView>